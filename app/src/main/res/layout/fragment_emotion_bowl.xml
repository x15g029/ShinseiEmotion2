<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.EmotionBowlFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_back"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageBowlSui"
            android:layout_width="84dp"
            android:layout_height="77dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="50dp"
            android:layout_weight="0.02"
            android:paddingTop="10dp"
            android:src="@drawable/dai_sui" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBowlKin"
                android:layout_width="83dp"
                android:layout_height="85dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/dai_kin" />

            <ImageView
                android:id="@+id/imageBowlKa"
                android:layout_width="83dp"
                android:layout_height="85dp"
                android:layout_marginLeft="145dp"
                android:src="@drawable/dai_ka" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBowlMoku"
                android:layout_width="83dp"
                android:layout_height="87dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/dai_moku" />

            <ImageView
                android:id="@+id/imageBowlDo"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="180dp"
                android:src="@drawable/dai_do" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBowlTen"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_marginLeft="70dp"
                android:src="@drawable/dai_ten" />

            <ImageView
                android:id="@+id/imageBowlKai"
                android:layout_width="90dp"
                android:layout_height="81dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/dai_kai" />
        </LinearLayout>

        <Button
            android:id="@+id/btnMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAPへ" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:text="水晶を全部捨てる" />

        <Button
            android:id="@+id/testbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:text="Openingテスト表示" />

    </LinearLayout>

</FrameLayout>

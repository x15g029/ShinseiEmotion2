<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resultView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageResultText"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:padding="20dp"
            android:scaleX="1.2"
            android:scaleY="1.2" />

        <TextView
            android:id="@+id/ResultOdai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text=""
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageResultPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleX="1.2"
            android:scaleY="1.2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnStageSelect"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:srcCompat="@drawable/result_map" />

        <ImageButton
            android:id="@+id/b1"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:srcCompat="@drawable/go_suisho" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageResultMonster"
        android:layout_width="360dp"
        android:layout_height="220dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/m_ka_result" />

</LinearLayout>